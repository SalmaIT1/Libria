{% extends 'base.html.twig' %}

{% block title %}Publishers - Libria{% endblock %}

{% block body %}
<div class="hero-section">
    <div class="container text-center position-relative" style="z-index: 2;">
        <h1 class="hero-title">Publishers</h1>
        <p class="hero-subtitle">Explore our publishing partners and their collections</p>
    </div>
</div>

<div class="container mb-5" style="position: relative; z-index: 1;">
    {% if publishers|length > 0 %}
        <div class="row g-4">
            {% for publisher in publishers %}
                <div class="col-sm-6 col-md-4 col-lg-3">
                    <div class="publisher-card">
                        <div class="publisher-icon">
                            <i class="bi bi-building"></i>
                        </div>
                        <div class="publisher-info">
                            <h5 class="publisher-name">{{ publisher.nomEditeur }}</h5>
                            {% if publisher.pays %}
                                <p class="publisher-location">
                                    <i class="bi bi-geo-alt"></i> {{ publisher.pays }}
                                </p>
                            {% endif %}
                            <a href="{{ path('publisher_show', {id: publisher.id}) }}" class="publisher-link">
                                View Details <i class="bi bi-arrow-right"></i>
                            </a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <div class="library-card p-5 text-center">
            <div style="width: 120px; height: 120px; margin: 0 auto 2rem; background: linear-gradient(135deg, var(--coffee), var(--caramel)); border-radius: 30px; display: flex; align-items: center; justify-content: center; box-shadow: var(--shadow-lg);">
                <i class="bi bi-building" style="font-size: 4rem; color: white;"></i>
            </div>
            <h3 class="book-title mt-3" style="font-size: 2rem;">No Publishers Found</h3>
            <p class="book-meta fs-5">Check back later for new publishers</p>
        </div>
    {% endif %}
</div>

<style>
    .publisher-card {
        background: var(--bg-card);
        backdrop-filter: blur(10px);
        border-radius: 1.5rem;
        padding: 2rem 1.5rem;
        text-align: center;
        transition: all 0.3s ease;
        border: 1px solid var(--border-color);
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
        height: 100%;
        display: flex;
        flex-direction: column;
        align-items: center;
        position: relative;
        overflow: hidden;
    }

    .publisher-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 4px;
        background: linear-gradient(90deg, var(--mocca), var(--caramel));
        transform: scaleX(0);
        transition: transform 0.3s ease;
    }

    .publisher-card:hover {
        transform: translateY(-8px);
        box-shadow: 0 12px 40px rgba(171, 119, 67, 0.15);
        border-color: var(--mocca);
    }

    .publisher-card:hover::before {
        transform: scaleX(1);
    }

    .publisher-icon {
        width: 90px;
        height: 90px;
        border-radius: 1rem;
        background: linear-gradient(135deg, var(--mocca), var(--caramel));
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 1.5rem;
        box-shadow: 0 8px 24px rgba(171, 119, 67, 0.2);
        transition: all 0.3s ease;
    }

    .publisher-card:hover .publisher-icon {
        transform: scale(1.1) rotate(5deg);
        box-shadow: 0 12px 32px rgba(171, 119, 67, 0.3);
    }

    .publisher-icon i {
        font-size: 2.5rem;
        color: white;
    }

    .publisher-info {
        flex: 1;
        display: flex;
        flex-direction: column;
        width: 100%;
    }

    .publisher-name {
        font-family: 'Playfair Display', serif;
        font-size: 1.25rem;
        font-weight: 600;
        color: var(--text-primary);
        margin-bottom: 0.75rem;
        line-height: 1.4;
    }

    .publisher-location {
        color: var(--text-secondary);
        font-size: 0.9rem;
        margin-bottom: 1rem;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
    }

    .publisher-location i {
        color: var(--caramel);
        font-size: 0.85rem;
    }

    .publisher-link {
        color: var(--mocca);
        text-decoration: none;
        font-weight: 500;
        font-size: 0.95rem;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        transition: all 0.3s ease;
        margin-top: auto;
    }

    .publisher-link:hover {
        color: var(--caramel);
        gap: 0.75rem;
    }

    .publisher-link i {
        transition: transform 0.3s ease;
    }

    .publisher-link:hover i {
        transform: translateX(4px);
    }

    [data-theme='dark'] .publisher-card {
        background: rgba(30, 30, 30, 0.95);
        border-color: rgba(215, 189, 166, 0.2);
    }

    [data-theme='dark'] .publisher-icon {
        background: linear-gradient(135deg, var(--caramel), var(--mocca));
    }

    [data-theme='dark'] .publisher-card:hover {
        border-color: var(--vanilla);
        box-shadow: 0 12px 40px rgba(215, 189, 166, 0.2);
    }
</style>
{% endblock %}
