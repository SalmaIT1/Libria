                `;
                
                // Mark as read when clicked
                if (!notif.lu && notif.lien) {
                    const link = li.querySelector('.notification-link');
                    link.addEventListener('click', function(e) {
                        if (notif.lien) {
                            markAsRead(notif.id, li);
                        }
                    });
                }
                
                return li;
            }

            // Mark notification as read
            function markAsRead(id, element) {
                fetch(`/notifications/marquer-lu/${id}`, {
                    method: 'POST',
                    headers: {'Content-Type': 'application/json'}
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        element.classList.remove('notification-unread');
                        const link = element.querySelector('.notification-link');
                        if (link) link.classList.remove('fw-semibold');
                        const badge = element.querySelector('.badge');
                        if (badge) badge.remove();
                        updateNotificationBadge();
                    }
