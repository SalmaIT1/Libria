                    confirmButton.addEventListener('click', function() {
                        if (sharedPendingAction) {
                            sharedPendingAction();
                            sharedPendingAction = null;
                        }
                        const modal = bootstrap.Modal.getInstance(document.getElementById('sharedConfirmModal'));
                        if (modal) {
                            modal.hide();
                        }
                    });
                }
            });
        </script>
