{# --- PATCH de robustesse --- #}
{% set pagination = pagination is defined
    ? pagination
    : (pager is defined
        ? pager
        : (_context['pagination'] ?? _context['pager'] ?? null)) %}
{% if pagination is not defined or pagination is null %}
    <div class="alert alert-danger my-4">Pagination context is missing.</div>
{% else %}
{% set route = app.request.attributes.get('_route') %}
{% set params = app.request.query.all %}
<div class="pagination-wrapper">
    <ul class="pagination">
        {% if pagination.page > 1 %}
            <li class="page-item">
                <a class="page-link" href="{{ path(route, params|merge({page: pagination.page - 1})) }}">
                    <i class="bi bi-chevron-left"></i> Previous
                </a>
            </li>
        {% else %}
            <li class="page-item disabled">
                <span class="page-link">
                    <i class="bi bi-chevron-left"></i> Previous
                </span>
            </li>
        {% endif %}

        {% for page in pagination.pagesInRange %}
            {% if page == pagination.page %}
                <li class="page-item active">
                    <span class="page-link">{{ page }}</span>
                </li>
            {% else %}
                <li class="page-item">
                    <a class="page-link" href="{{ path(route, params|merge({page: page})) }}">{{ page }}</a>
                </li>
            {% endif %}
        {% endfor %}

        {% if pagination.page < pagination.pageCount %}
            <li class="page-item">
                <a class="page-link" href="{{ path(route, params|merge({page: pagination.page + 1})) }}">
                    Next <i class="bi bi-chevron-right"></i>
                </a>
            </li>
        {% else %}
            <li class="page-item disabled">
                <span class="page-link">
                    Next <i class="bi bi-chevron-right"></i>
                </span>
            </li>
        {% endif %}
    </ul>
    <div class="text-center mt-3 text-white">
        <small>Page {{ pagination.page }} of {{ pagination.pageCount }} ({{ pagination.totalItemCount }} total books)</small>
    </div>
</div>
{% endif %}

