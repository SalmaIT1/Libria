{% extends 'base.html.twig' %}

{% block title %}My Profile - Libria{% endblock %}

{% block body %}
<div class="hero-section">
    <div class="container text-center position-relative" style="z-index: 2;">
        <h1 class="hero-title">My Profile</h1>
        <p class="hero-subtitle">Manage your account information</p>
    </div>
</div>

<div class="container my-5" style="position: relative; z-index: 1;">
    <div class="row justify-content-center">
        <div class="col-md-8">
            {% for message in app.flashes('success') %}
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="bi bi-check-circle"></i> {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}

            <div class="library-card p-5">
                <div class="d-flex align-items-center mb-4">
                    <div class="profile-avatar me-3">
                        {% if user.avatar %}
                            <img src="{{ asset('uploads/avatars/' ~ user.avatar) }}" 
                                 alt="Profile Picture" 
                                 class="profile-avatar-img"
                                 onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';">
                            <span class="profile-initials" style="display: none;">
                                {{ (user.firstName|default('')|length > 0 ? user.firstName|split('')|first|upper : '?') }}{{ (user.lastName|default('')|length > 0 ? user.lastName|split('')|first|upper : '') }}
                            </span>
                        {% else %}
                            <span class="profile-initials">
                                {{ (user.firstName|default('')|length > 0 ? user.firstName|split('')|first|upper : '?') }}{{ (user.lastName|default('')|length > 0 ? user.lastName|split('')|first|upper : '') }}
                            </span>
                        {% endif %}
                    </div>
                    <div>
                        <h3 class="mb-0 book-title">{{ user.firstName|default('') }} {{ user.lastName|default('') }}</h3>
                        <p class="text-muted mb-0">{{ user.email }}</p>
                    </div>
                </div>

                <hr class="my-4">

                {{ form_start(profileForm, {'attr': {'class': 'needs-validation', 'enctype': 'multipart/form-data'}}) }}
                    <div class="mb-3">
                        {{ form_label(profileForm.avatarFile, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(profileForm.avatarFile, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(profileForm.avatarFile) }}
                        {% if user.avatar %}
                            <small class="form-text text-muted">
                                <i class="bi bi-info-circle"></i> Current avatar: {{ user.avatar }}. Upload a new image to replace it.
                            </small>
                        {% else %}
                            <small class="form-text text-muted">
                                <i class="bi bi-info-circle"></i> Upload a profile picture (max 2MB, JPEG, PNG, GIF or WebP).
                            </small>
                        {% endif %}
                    </div>
                    <div class="mb-3">
                        {{ form_label(profileForm.email, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(profileForm.email, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(profileForm.email) }}
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            {{ form_label(profileForm.firstName, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(profileForm.firstName, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(profileForm.firstName) }}
                        </div>
                        <div class="col-md-6 mb-3">
                            {{ form_label(profileForm.lastName, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(profileForm.lastName, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(profileForm.lastName) }}
                        </div>
                    </div>

                    <div class="d-grid mt-4">
                        <button type="submit" class="btn btn-library btn-lg">
                            <i class="bi bi-save"></i> Update Profile
                        </button>
                    </div>
                {{ form_end(profileForm) }}
            </div>
        </div>
    </div>
</div>

<style>
.profile-avatar {
    width: 70px;
    height: 70px;
    border-radius: 50%;
    background: linear-gradient(135deg, var(--vanilla), var(--caramel));
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    overflow: hidden;
    flex-shrink: 0;
}

[data-theme='dark'] .profile-avatar {
    background: linear-gradient(135deg, var(--caramel), var(--mocca));
}

.profile-avatar-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 50%;
}

.profile-initials {
    font-family: 'Playfair Display', serif;
    font-size: 1.8rem;
    font-weight: 700;
    color: white;
    letter-spacing: 0.01em;
}
</style>
{% endblock %}

